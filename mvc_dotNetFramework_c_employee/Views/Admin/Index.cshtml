@model mvc_dotNetFramework_c_employee.Models.Admin

@{
    Layout = null;
}
@using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.adminid)
    <div class="form-group">
        @Html.LabelFor(model => model.email, new { @class = "control-label" })
        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.password, new { @class = "control-label" })
        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" onclick="SubmitForm" class="btn btn-outline-success" />
    </div>
}
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
@section scripts{
    <script>
        function SubmitForm(form) {
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Add", "Admin")',
                    data: $(form).serialize()
                })
            }
            return false;
        }
    </script>
}